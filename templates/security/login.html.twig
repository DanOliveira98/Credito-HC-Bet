{% extends 'base.html.twig' %}

{% block title %}Entrar{% endblock %}

{% block body %}
<style>
html,
body {
  height: 100%;
}

body {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;
}

.form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}
.form-signin .checkbox {
  font-weight: 400;
}
.form-signin .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
</style>

<body class="text-center">
<form method="post" class="form-signin">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <img class="mb-4" src="{{asset('logo.jpeg')}}" alt="" width="100" height="100">
    <h1 class="mb-10 lead">Sistema de Proteção para Sites de Aposta</h1>
    <div class="">
        <div class="form-group">
            <input type="text" class="form-control" id="inputUsername" placeholder="Nome de Usuário"  name="username" value="{{last_username}}" required autofocus>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="InputPassword" placeholder="Senha"  name="password" required>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button type="submit" class="btn btn-lg btn-danger btn-block" style="">Entrar</button>
        
    </div>
</form>
        
</body>



{% endblock %}